<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投" />

        <com.goldenapple.lottery.component.QuantityView
            android:id="@+id/double_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:qv_addButtonBackground="@drawable/quantityview_add_selector"
            app:qv_addButtonTextColor="@color/background"
            app:qv_quantity="1"
            app:qv_quantityBackground="@color/white"
            app:qv_removeButtonBackground="@drawable/quantityview_remove_selector"
            app:qv_removeButtonTextColor="@color/background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倍" />
    </LinearLayout>

    <LinearLayout android:id="@+id/chaseadd_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="追" />

        <com.goldenapple.lottery.component.QuantityView
            android:id="@+id/chaseadd_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:qv_addButtonBackground="@drawable/quantityview_add_selector"
            app:qv_addButtonTextColor="@color/background"
            app:qv_quantity="0"
            app:qv_quantityBackground="@color/white"
            app:qv_removeButtonBackground="@drawable/quantityview_remove_selector"
            app:qv_removeButtonTextColor="@color/background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模式"/>

        <TextView android:id="@+id/setting_mode"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/background_border"
            android:gravity="center"
            android:text="元"
            android:textColor="#ee7e45"/>

        <ImageView
            android:id="@+id/select_mode"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#34495e"
            android:src="@drawable/ic_jiantouup"/>

    </LinearLayout>
</LinearLayout>
