<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/background"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/timing_sales_issue_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp"
        android:text="20151209－0781"
        android:textColor="@color/text_dark" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="15dp">

        <com.goldenapple.lottery.component.CountdownView
            android:id="@+id/timing_sales_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_white"
            app:isHideTimeBackground="true"
            app:isShowDay="false"
            app:isShowHour="true"
            app:isShowMillisecond="false"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isTimeTextBold="true"
            app:suffixTextColor="@color/app_main_dark"
            app:suffixTextSize="16sp"
            app:timeTextColor="@color/app_main_dark"
            app:timeTextSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截止投注" />

    </LinearLayout>
</RelativeLayout>
