<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lottery_history_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="第xxxxxxxx-xxx期"
        android:textColor="@color/text_middle"
        android:textSize="12sp" />

    <!--时时彩 十一选五-->
    <LinearLayout
        android:id="@+id/lottery_history_code"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            style="@style/lottery_trend_ball"
            android:text="x"
            android:visibility="gone" />

        <TextView
            style="@style/lottery_trend_ball"
            android:text="x"
            android:visibility="gone" />

        <TextView
            style="@style/lottery_trend_ball"
            android:text="x"
            android:visibility="gone" />

        <TextView
            style="@style/lottery_trend_ball"
            android:text="x"
            android:visibility="gone" />

        <TextView
            style="@style/lottery_trend_ball"
            android:text="x"
            android:visibility="gone" />

        <TextView
            style="@style/lottery_trend_ball"
            android:text="x"
            android:visibility="gone" />

        <TextView
            style="@style/lottery_trend_ball"
            android:text="x"
            android:visibility="gone" />

        <TextView
            style="@style/lottery_trend_ball"
            android:text="x"
            android:visibility="gone" />

        <TextView
            style="@style/lottery_trend_ball"
            android:text="x"
            android:visibility="gone" />

        <TextView
            style="@style/lottery_trend_ball"
            android:text="x"
            android:visibility="gone" />
    </LinearLayout>

    <!--快三-->
    <include
        android:id="@+id/kuaisanLayout"
        layout="@layout/lottery_trend_item_kuaisan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone" />

    <!--PK10-->
    <LinearLayout
        android:id="@+id/pk10layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/replaceLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/rank_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="冠"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="亚"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="季"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="四"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="五"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="六"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="七"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="八"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="九"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="十"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_size_tiny" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>